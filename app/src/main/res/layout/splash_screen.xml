<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="pcs3853.entregameupacote.activities.splash_screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/splash_screen_img_pacote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/pacote"
            android:paddingTop="50dp"
            android:src="@drawable/pacote" />

        <TextView
            android:id="@+id/splash_screen_txt_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/splash_screen_img_pacote"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/splash_screen_btn_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/splash_screen_txt_entre_aqui"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/cadastro_cadastre_se"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/splash_screen_txt_entre_aqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/possui_conta_entre_aqui"
            android:textColor="@color/colorSecondaryText" />

    </RelativeLayout>

</FrameLayout>
